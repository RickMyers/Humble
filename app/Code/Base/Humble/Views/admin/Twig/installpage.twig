<style type="text/css">
    .admin-install-data {
        font-family: sans-serif; font-size: .95em; padding: 2px; background-color: lightcyan; width: 225px; border: 1px solid #333
    }
    .admin-install-desc {
        padding-bottom: 20px; letter-spacing: 1px; font-family: monospace; font-size: .9em
    }
</style>
<table style="width: 100%; height: 100%">
    <tr>
        <td>
            <div style="padding: 20px; width: 600px; border: 1px solid #333; margin-right: auto; margin-left: auto; border-radius: 10px">
                <form name="install_humble_module_form" id="install_humble_module_form" onsubmit="return false">
                    <fieldset><legend>Instructions</legend>
                        Choose the Module to apply the data to below, then click 'Upload'
                        <br /><br />
                        <div>
                            <select name="namespace" id="install_humble_namespace" class="admin-install-data">
                                {% for module in modules.fetch() %}
                                    <option value="{{ module.namespace }}"> {{ module.module }} [{{ module.namespace }}]</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="admin-install-desc">
                            Module Namespace
                        </div>
                        <div>
                            <input type="file" name="module" id="install_humble_module_file" class="admin-install-data" />
                        </div>
                        <div class="admin-install-desc">
                            Module File
                        </div>
                        <div>
                            <input type="button" name="install_module_submit" id="install_module_submit" value="  Upload  " />
                        </div>
                    </fieldset>
                </form>
            </div>
        </td>
    </tr>
</table>
<script type="text/javascript">
    (function () {
        new EasyEdits('/edits/humble/installmodule','install_module');
    })();
</script>    
