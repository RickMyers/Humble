                        "classname":    "settingsButton",
                        "value":        "",
                        "onclick":        function () {
                            if (Edits['smtp_settings'].validate()) {
                                (new EasyAjax('/humble/smtp/save')).packageForm('smtp_settings_form').then((response) => {
                                    alert(response);
                                }).post();
                            }
