<?xml version="1.0"?>
<!--

Configurations from the parent handler class itself

For Controller reference, please see "Anatomy of a Controller" at https://humble.enicity.com/internal/docs/controller.html
-->
<controller name="handler" use="Smarty3" author="Rick Myers" email="rick@enicity.com">
    <actions>

        <action name="error">
            <description>Sets the error message (singular) for the handler</description>
            <mongo namespace='paradigm' class='elements' id='element'>
                <parameter name="id" source="post" default="" required="true" />
            </mongo>
            <helper namespace="workflow" class='data' id='helper'>
                <parameter name="windowId" source="post" default="" required="true" />
            </helper>
        </action>

    </actions>
</controller>