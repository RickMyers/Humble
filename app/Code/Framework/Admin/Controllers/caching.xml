<controller name="caching" use="Twig" author="Rick Myers" email="rick@humbleprogramming.com">
    <actions blocking="off" response="false">
        <action name="status" output="JSON">
            <description>Is the cache working?</description>
            <cache assign="status" get="cacheStatus" />
        </action>

        <!-- ############################################################### -->

    </actions>
</controller>