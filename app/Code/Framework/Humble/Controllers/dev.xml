<?xml version="1.0"?>
<controller name="dev" use="Twig">
    <actions>
        <action name="pull"> 
            <description>Does a pull from github</description>
            <model namespace="humble" class="Utility" id='Utility'>
                <parameter name='uid' source='session' value='uid' default='' />
            </model>
        </action>
        
        <!-- ######################################################################## -->

        <action name="commit"> 
            <description>Does a commit on the development server</description>
            <model namespace="humble" class="Utility" id='Utility'>
                <parameter name='uid' source='session' value='uid' default='' />
            </model>
        </action>

        <!-- ######################################################################## -->
        <action name="push"> 
            <description>Does a push of the development code to github</description>
            <model namespace="humble" class="Utility" id='Utility'>
                <parameter name='uid' source='session' value='uid' default='' />
            </model>
        </action>

        <!-- ######################################################################## -->
                            
        <action name="promote"> 
            <description>Does a promotion from the development server to the test server</description>
            <model namespace="humble" class="Utility" id='Utility'>
                <parameter name='uid' source='session' value='uid' default='' />
            </model>
        </action>

        <!-- ######################################################################## -->
                            
                            
    </actions>
</controller>