{
    "handlers": {
        "framework": {
            "system": {
                "callbacks": {
                    "snapshotSystem": true
                },
                "multiple": 6
            },
            "housekeeping": {
                "callbacks": {
                    "clearSystemStats": true
                },
                "multiple": 20 
            },
            "apipolicy": {
                "callbacks": {
                    "watchAPIPolicy": true
                },
                "multiple": 6
            },
            "application.xml": {
                "callbacks": {
                    "watchApplicationXML": true
                },
                "multiple": 2
            },
            "allowedrules": {
                "callbacks": {
                    "watchAllowedRules": true
                },
                "multiple": 6
            },    
            "configurations": {
                "callbacks": {
                    "scanConfigurationsForChanges": true
                },
                "multiple": 4
            },        
            "controllers": {
                "callbacks": {
                    "scanControllersForChanges": true
                },
                "multiple": 2
            },
            "models": {
                "callbacks": {
                    "scanModelsForChanges": true,
                    "scanExternalsForChanges": true
                },
                "multiple": 3
            },
            "files": {
                "callbacks": {
                    "scanFilesForChanges": true
                },
                "multiple": 2
            },
            "images": {
                "callbacks": {
                    "scanImagesForChanges": true
                },
                "multiple": 3
            },
            "routes": {
                "callbacks": {
                    "watchRouteAliases": true
                },
                "multiple": 3
            },
            "events": {
                "callbacks": {
                    "timedEvents": true,
                    "launchWorkflows": true
                },
                "multiple": 2
            }
        }           
    }
}
