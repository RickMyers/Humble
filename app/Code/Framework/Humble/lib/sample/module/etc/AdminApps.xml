<?xml version="1.0"?>
<!--

    For instructions on how to create your own apps on the administrators page
    please go to...
    
        https://humbleprogramming.com/pages/AdminApps.htmls
    
    For creating glass icons, I use this site...
    
        http://www.holshousersoftware.com/glass/
    
    Options:
        Square -> Rounded Corners -> 20px
        Fit image inside button
        To upload image, click agree to terms
-->
<apps>
    <app>
        <name>&&MODULE&& Admin App</name>
        <description>Default Administration App for &&PROJECT&&</description>
        <icon>
            <text>&&NAMESPACE&& Tool</text>
            <image>
                <desktop>/images/&&NAMESPACE&&/&&NAME&&_app_icon.png</desktop>
                <minimized>/images/&&NAMESPACE&&/&&NAME&&_app_icon.png</minimized>
            </image>
        </icon>
        <start>
            <uri>/&&NAMESPACE&&/admin/&&NAME&&</uri>
        </start>
    </app>
</apps>

