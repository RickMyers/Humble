<?xml version="1.0"?>
<controller name="console" use="Twig">
    <actions blocking="off">

        <action name="init" passalong="window_id">
            <description>Lays out the console, intializing it</description>
        </action>

        <!-- ################################################################################################# -->

        <action name="time">
            <description>returns the time and date on the server</description>
        </action>

        <!-- ################################################################################################# -->

        <action name='status'>
            <description>Returns the current system status</description>
        </action>

        <!-- ################################################################################################# -->

        <action name='whoami'>
            <description>Returns who you are</description>
            <entity namespace='admin' class='user/identification' id='user'>
                <parameter name='id' value='admin_id' source='session' required="true" />
            </entity>
        </action>

        <!-- ################################################################################################# -->

        <action name='search'>
            <description>Searches something?</description>
            <model namespace='paradigm' class='data' id='data'>
                <parameter name='term' value='term' source='post' default='stupid' />
            </model>
        </action>

        <!-- ################################################################################################# -->
        
        <action name='cli'>
            <description>Command Line Interface for the console</description>
            <helper namespace='paradigm' class='console' response='true' method='cli'>
                <parameter name='term' source='request' optional='true' />
            </helper>
        </action>
    </actions>
</controller>