({
	form:
	{
            id: 		"humble-paradigm-config-external-decision-form-&id&",
            drawme:		false,
            action:		"",
            onload:             function () { },
            method:		"post",
            style:		"",
            onenterkey:         "send"
	},
	fields:
	[
            {
                active:			true,
                id: 			"humble-paradigm-config-external-decision-form-namespace-&id&",
                longname:		"Namespace",
                title:			"Choose a client or core for namespace",
                onchange:       function (evt) {
                        if (evt.target.value) {
                            (new EasyAjax('/workflow/external/components')).add('namespace',evt.target.value).then((response) => {
                                EasyEdits.populateSelectBox($E('humble-paradigm-config-external-decision-form-component-&id&'),eval(response));
                            }).post();
                        }
                    },
                    type:           "select",
                    required:		true,
                    force:		true,
                    classname:		"",
                    style:		"border-radius: 3px; padding: 3px; width: 400px; border: 1px solid #aaf"
		},
		{
                    active:		true,
                    id: 		"humble-paradigm-config-external-decision-form-component-&id&",
                    longname:		"Component to use",
                    title:		"The object component",
                    onchange:       function (evt) {
                        if (evt.target.value) {
                            (new EasyAjax('/workflow/external/methods')).add('decision','Y').add('namespace',$('#humble-paradigm-config-external-decision-form-namespace-&id&').val()).add('component',evt.target.value).then((response) => {
                                EasyEdits.populateSelectBox($E('humble-paradigm-config-external-decision-form-method-&id&'),eval(response));
                            }).post();
                        }
                    },
                    type:               "select",
                    required:		true,
                    force:		true,
                    classname:		"",
                    style:		"border-radius: 3px; padding: 3px; width: 400px; border: 1px solid #aaf"
		},
		{
                    active:		true,
                    id: 		"humble-paradigm-config-external-decision-form-method-&id&",
                    longname:		"Function/Method",
                    title:		"The function to execute",
                    type:               "select",
                    required:		true,
                    force:		true,
                    classname:		"",
                    onchange:       function (evt) {
                        if (evt.target.value) {
                            var ao = new EasyAjax('/workflow/component/comment');
                            ao.add('namespace',$('#humble-paradigm-config-external-decision-form-namespace-&id&').val());
                            ao.add('class',$('#humble-paradigm-config-external-decision-form-component-&id&').val());
                            ao.add('method',evt.target.value);
                            ao.then((response) => {
                                if (response) {
                                    $('#config-component-comment-&id&').css('display','block').html(response);
                                }
                            }).post();
                        }
                    },
                    style:			"border-radius: 3px; padding: 3px; width: 400px; border: 1px solid #aaf"
		},
		{
                    active:		true,
                    id: 		"humble-paradigm-config-external-decision-form-id-&id&",
                    longname:		"Decision ID",
                    title:		"",
                    type:               "hidden",
                    required:		true,
                    force:		true,
                    classname:		"",
                    style:		""
		},
		{
                    active:		true,
                    id: 		"humble-paradigm-config-external-decision-form-save-&id&",
                    longname:		"Configure Save",
                    title:		"Press to initially establish this workflow component",
                    type:               "button",
                    required:		false,
                    force:		false,
                    value:              "Save",
                    classname:		"settingsButton",
                    onclick:        function (evt) {
                        if (Edits['decision_external_&id&'].validate()) {
                            $('#humble-paradigm-config-external-decision-form-&id&').submit();
                        }
                    },
                    style:		"font-size: 1em; padding: 2px 5px"
		}
	]
})
