{
    "note":     "a period of 20 and multiple of 2 would have this section run at a maximum of every 40 seconds.",
    "period":   3,
    "log": {
        "location": "../../logs/cadence.log",
        "max_size": "1M"
    },
    "handlers": {
        "apipolicy": {
            "callbacks": [
                "watchAPIPolicy"
            ],
            "multiple": 6
        },
        "applicationxml": {
            "callbacks": [
                "watchApplicationXML"
            ],
            "multiple": 6
        },
        "allowedrules": {
            "callbacks": [
                "watchAllowedRules"
            ],
            "multiple": 6
        },    
        "configurations": {
            "callbacks": [
                "scanConfigurationsForChanges"
            ],
            "multiple": 4
        },        
        "controllers": {
            "callbacks": [
                "scanControllersForChanges"
            ],
            "multiple": 2
        },
        "models": {
            "callbacks": [  
                "scanModelsForChanges"
            ],
            "multiple": 3
        },
        "workflows": {
            "callbacks": [
                "triggerFileWorkflows"
            ],
            "multiple": 4            
        },
        "files": {
            "callbacks": [
                "scanFilesForChanges"
            ],
            "multiple": 5
        }
    }
}
