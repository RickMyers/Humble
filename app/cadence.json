{
    "note":     "a period of 20 and multiple of 2 would have this section run at a maximum of every 40 seconds.",
    "period":   5,
    "log": {
        "location": "../../logs/cadence.log",
        "max_size": "1K"
    },
    "handlers": {
        "controllers": {
            "callbacks": [
                "scanControllersForChanges"
            ],
            "multiple": 2
        },
        "models": {
            "callbacks": [
                "scanModelsForChanges"
            ],
            "multiple": 3
        },
        "workflows": {
            "callbacks": [
                "triggerWorkflows"
            ],
            "multiple": 4            
        },
        "files": {
            "callbacks": [
                "scanFilesForChanges"
            ],
            "multiple": 10
        }
    }
}
