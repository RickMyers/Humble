            "onclick":        function () {
                if (Edits['new-mongodb'].validate()) {
                    (new EasyAjax('/mongotest.php')).add('action','new').add('port',$('#mongo-port').val()).add('processname',$('#mongo-processname').val()).add('location',$('#mongo-location').val()).add('datadir',$('#mongo-datadir').val()).then(function (response) {
